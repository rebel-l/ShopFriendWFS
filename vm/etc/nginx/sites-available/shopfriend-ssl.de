#
# Static Public
#
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    include snippets/shopfriend.test-certificate.conf;
    include snippets/ssl-params.conf;

    server_name www.shopfriend.test;

    # Avoid trailing slashes
    include snippets/trailingslash.conf;

    location / {
        proxy_pass http://localhost:8080/;
    }

    error_log /var/log/nginx/shopfriend-ssl.test_error.log "error";
    access_log  /var/log/nginx/shopfriend-ssl.test_access.log;
}

#
# HTTP to HTTPS redirect
#
server {
    listen 80 http2;
    listen [::]:80 http2;

    server_name www.shopfriend.test;

    return 301 https://$server_name$request_uri;

    error_log /var/log/nginx/shopfriend-ssl.test_error.log "error";
    access_log  /var/log/nginx/shopfriend-ssl.test_access.log;
}

#
# non-www to www redirect
#
server {
    listen 80 http2;
    listen [::]:80 http2;
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name shopfriend.test;
    return 301 https://www.$server_name$request_uri;
    error_log /var/log/nginx/shopfriend-ssl.test_error.log "error";
    access_log /var/log/nginx/shopfriend-ssl.test_access.log;
}

#
# Auth Service
#
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    include snippets/shopfriend.test-certificate.conf;
    include snippets/ssl-params.conf;

    server_name auth.shopfriend.test;

    # Avoid trailing slashes
    include snippets/trailingslash.conf;

    location / {
        proxy_pass http://localhost:3000/;
    }

    error_log /var/log/nginx/shopfriend-ssl.test_error.log "error";
    access_log /var/log/nginx/shopfriend-ssl.test_access.log;
}
